# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# External routes
GET     /authyservice/v1/health     controllers.Health.health
GET     /authyservice/v1/version    controllers.Health.version

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Authentication
GET     /login                      controllers.Authentication.login
POST    /login                      controllers.Authentication.authenticate
GET     /logout                     controllers.Authentication.logout

# Restricted content
GET     /restricted                 controllers.Restricted.index

# Authy
GET     /authyservice/v1/token      controllers.Token.getTokenForm
POST    /authyservice/v1/token      controllers.Token.postTokenForm
GET     /authyservice/v1/userreg    controllers.AuthyUserRegistration.getUserRegistrationForm
POST    /authyservice/v1/userreg    controllers.AuthyUserRegistration.postUserRegistrationForm

